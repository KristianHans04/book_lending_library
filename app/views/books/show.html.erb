<h1><%= @book.title %></h1>
<p><strong>Author:</strong> <%= @book.author %></p>
<p><strong>Genre:</strong> <%= @book.genre %></p>
<h2>Borrowing History</h2>
<ul>
  <% @book.borrowings.each do |borrowing| %>
    <li>
      <%= borrowing.borrower_name %> borrowed on <%= borrowing.borrow_date %>
      <% if borrowing.return_date %>
        and returned on <%= borrowing.return_date %>
      <% else %>
        and has not returned yet
      <% end %>
    </li>
  <% end %>
</ul>
<%= link_to 'Borrow', borrow_book_path(@book), method: :get %>
<%= link_to 'Return', return_book_path(@book), method: :post %>
<%= link_to 'Back', books_path %>